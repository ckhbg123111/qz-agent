# Copy this file to .env and edit values.
# After changes, restart the application process or containers.

# =========================
# Application - Database
# =========================
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/qz_agent?useUnicode=true&characterEncoding=utf8&useSSL=false&serverTimezone=Asia/Shanghai&allowPublicKeyRetrieval=true&createDatabaseIfNotExist=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=change_me_db_password

# =========================
# Application - Redis
# =========================
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=
SPRING_REDIS_DATABASE=0

# =========================
# Application - JWT
# =========================
JWT_SECRET=change_me_to_a_long_random_secret
JWT_EXPIRE_SECONDS=3600

# =========================
# Application - Wechat Message API
# =========================
WECHAT_MESSAGE_BASE_URL=https://api.aiqikang.com
WECHAT_MESSAGE_PATH=/api/b2b/wechat/message
WECHAT_MESSAGE_APP_KEY=qzhospital
WECHAT_MESSAGE_APP_SECRET=change_me_wechat_message_secret

# =========================
# Application - Wechat Push (SOAP)
# Keep empty if you do not use this integration.
# =========================
WECHAT_PUSH_WSDL_URL=
WECHAT_PUSH_ENDPOINT_URL=
WECHAT_PUSH_NAMESPACE=
WECHAT_PUSH_SERVICE_NAME=
WECHAT_PUSH_PORT_NAME=
WECHAT_PUSH_METHOD_NAME=

# =========================
# Application - Logging
# =========================
LOG_PATH=logs

# =========================
# Docker Compose - MySQL/Redis side
# =========================
MYSQL_ROOT_PASSWORD=change_me_mysql_root_password
MYSQL_DATABASE=qz_agent
REDIS_PASSWORD=

# Optional JVM options for app container
JAVA_OPTS=
